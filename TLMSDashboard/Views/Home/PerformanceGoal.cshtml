

@{
    ViewData["Title"] = "Performance Goal Setting";
}

<main>
    <div class="card w-100 border-0 shadow-sm p-3 mb-5 bg-white rounded h-100">
        <div class="c-body">
            <form class="goal-form" method="get" action="/Home/PerformanceGoal">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <div class="row my-2">
                            <div class="col-md-4">
                                <span id="ex6CurrentSliderValLabel">Product</span>

                            </div>

                            <div class="col-md-6">
                                <input class="form-control" list="datalistOptions" name="Product" id="autocomplete" placeholder="Type to search..." autocomplete="off">
                            </div>

                        </div>
                 
                        

                        <div class="row my-2">
                            <div class="col-md-4">
                                <span id="ex6CurrentSliderValLabel">Current Goal</span> <span>(mins)</span>

                            </div>

                            <div class="col-md-6">
                                <select id="current-goal" class="form-control" aria-label="Curent goal" readonly disabled onfocus="this.defaultIndex=this.selectedIndex;" onchange="this.selectedIndex=this.defaultIndex;">
                                    <option value="Output">Output (pcs)</option>
                                    <option value="NotGood">Not good (pcs)</option>
                                    <option value="Rework">Rework (pcs)</option>
                                    <option value="StartDate"> Start Date</option>
                                    <option value="EndDate">End Date</option>
                                </select>
                            </div>

                        </div>

                        <div class="row my-2">
                            <div class="col-md-4">
                                <span>Select target goal</span>

                            </div>

                            <div class="col-md-6">
                                <select class="form-control" aria-label="Default select example" name="TargetGoal">
                                    <option>Goal state</option>
                                    <option value="Output">Output (pcs)</option>
                                    <option value="NotGood">Not good (pcs)</option>
                                    <option value="Rework">Rework (pcs)</option>
                                    <option value="StartDate"> Start Date</option>
                                    <option value="EndDate">End Date</option>
                                </select>
                            </div>

                        </div>

                    </div>
                    <div class="form-group col-md-6">

                    </div>
                </div>

                <div class="form-group row pt-4">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Saving</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</main>



<script type="text/javascript">
    window.autocompleteData = {
        "Product 1": "Output",
        "Product 2": "NotGood",
        "Product 3": "Rework",
        "Product 4": "StartDate",
        "Product 5": "EndDate",
        "Product 6": "Rework"
    }
</script>